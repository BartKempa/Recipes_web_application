<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0006-1" author="admin">
        <createTable tableName="favorite_recipes">
            <column name="user_id"  type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_favorite_recipes_user_id"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="recipe_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_favorite_recipes_recipe_id"
                             referencedTableName="recipe"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="favorite_recipes"
                             constraintName="unique_favorite_recipes"
                             columnNames="user_id, recipe_id"/>
    </changeSet>
</databaseChangeLog>